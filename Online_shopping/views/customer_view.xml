<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="customer_form_view" model="ir.ui.view">
            <field name="name">customer.form.view</field>
            <field name="model">my.customer.customer</field>
            <field name="arch" type="xml">
                <form string="Customer Form">
                    <sheet>
                        <div name="button_box" position="inside">
                            <button class="oe_stat_button" type="object" name="action_order_list"
                                icon="fa-usd">
                                <field string="Orders" name="order_count" widget="statinfo"/>
                            </button>
                        </div>
                        <group>
                            <field name="name"/>
                            <field name="email"/>
                            <field name="address"/>
                            <field name="customerID"/>
                            <field name="dob"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="customer_tree_view" model="ir.ui.view">
            <field name="name">customer.tree.view</field>
            <field name="model">my.customer.customer</field>
            <field name="arch" type="xml">
                <tree string="Customer Tree">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="address"/>
                    <field name="customerID"/>
                    <field name="dob"/>
                </tree>
            </field>
        </record>

        <record id="renew_bday_template" model="mail.template">
            <field name="name">Bday: Wishes Mail</field>
            <field name="email_from">{{user.email}}</field>
            <field name="model_id" ref="Online_shopping.model_my_customer_customer"/>
            <!-- <field name="model_id" ref="Online_shopping.model_res_partner"/> -->
            <field name="auto_delete" eval="True"/>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <div>
                        <h5>
                            Hello <t t-out="object.name"/>
                        </h5>
                    </div>
                    <div>
                        <p>Wishing you a very happy birthday!
                        <br/><br/>
                        May you achieve more success in your life.
                        <br/><br/>
                        Enjoy your day.
                        </p> 
                    </div>
                    <br/>
                    Best Wishes,
                    <br/>
                    <t t-out="user.name"/>
                    <br/>
                </div>
            </field>
        </record>

        <record id="action_customer" model="ir.actions.act_window">
            <field name="name">Customer</field>
            <field name="res_model">my.customer.customer</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem 
                id="menu_customer_form" 
                name="Customer" 
                parent="customer_menu" 
                action="action_customer"/>    
    </data>
</odoo>