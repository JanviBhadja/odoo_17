<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="template_layout" name="custom page">
        <t t-call="website.layout">
            
            <div class="container col-xxl-8 px-4 py-5">
                <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
                    <div class="col-12 col-lg-4">
                        <img src="/custom_website/static/src/img/1.jpg" class="d-block mx-lg-auto img img-fluid" alt="Themes" width="700" height="500" loading="lazy"/>
                    </div>
                    <div class="col-12 col-lg-4">
                        <img src="/custom_website/static/src/img/3.jpg" class="d-block mx-lg-auto img img-fluid" alt="Birds" width="700" height="500" loading="lazy"/>
                    </div>
                    <div class="col-12 col-lg-4">
                        <img src="/custom_website/static/src/img/4.jpg" class="d-block mx-lg-auto img img-fluid" alt="Nature" width="700" height="500" loading="lazy"/>
                    </div>
                </div>
            </div>
            <div class="t-1">
                    <div>
                        <div class="m-1 p-1 text-center">
                            <h1>Table</h1>
                        </div>
                    </div>
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">No.</th>
                            <th scope="col">salesperson</th>
                            <th scope="col">customer</th>
                            <th scope="col">order</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <th scope="row">2</th>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <th scope="row">3</th>
                            <td ></td>
                            <td></td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            <div class="container">
                <div>
                    <div class="m-1 p-1 text-center">
                        <h1>Form</h1>
                    </div>
                </div>
                <form id="sale_order_form" class="my-3 mx-1" action="/myhome/user_data" method="post">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp"/>
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password"/>
                    </div>
                    <button type="submit" class="btn btn-primary submitButton">Submit</button>
                </form>
            </div>
        </t>
    </template>
    <template id="template_status" name="sale order form">
        <t t-call="website.layout">
            <h2>Sale Order Status</h2>
            <t t-if="status == 'success'">
                <p>Sale Order Created Successfully</p>
                <p>Sale Order ID: <t t-esc="sale_order.id"/></p>
                <p>Partner ID: <t t-esc="sale_order.partner_id.id"/></p>
                <p>User ID: <t t-esc="sale_order.user_id.id"/></p>
                <h3>Order Lines:</h3>
                <ul>
                    <t t-foreach="sale_order.order_line" t-as="line">
                        <li>Product ID: <t t-esc="line.product_id.id"/> - Quantity: <t t-esc="line.product_uom_qty"/> - Price: <t t-esc="line.price_unit"/></li>
                    </t>
                </ul>
            </t>
        </t>
    </template>
</odoo>
